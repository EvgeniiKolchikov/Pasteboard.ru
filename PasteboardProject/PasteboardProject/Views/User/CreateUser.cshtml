@model PasteboardProject.Models.ViewModels.UserViewModel;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Регистрация</p>

<form asp-action="CreateUser" asp-controller="User" method="post">
    <div class="col-4 mx-auto">
        <div class="mb-3">
            <label class="form-label">Имя аккаунта</label>
            <input type="text" asp-for="User.Name" class="form-control"/>
            <div class="form-text">Введите имя аккаунта</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input type="password" asp-for="User.Password" class="form-control"/>
            <div class="form-text">Введите пароль</div>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Регистрация</button>
    </div>
</form>

