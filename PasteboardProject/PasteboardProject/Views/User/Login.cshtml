@model PasteboardProject.Models.ViewModels.UserViewModel;

<form asp-action="Login" asp-controller="User" method="post">
  <div class="col-4 mx-auto">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Логин</label>
        <input type="text" asp-for="User.Name" class="form-control" >
        <div id="emailHelp" class="form-text">Введите логин</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" asp-for="User.Password" class="form-control" id="exampleInputPassword1">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>

