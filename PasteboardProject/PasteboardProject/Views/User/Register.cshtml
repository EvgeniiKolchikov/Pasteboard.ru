@model PasteboardProject.Models.ViewModels.RegisterViewModel;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Регистрация</p>

<form asp-action="Register" asp-controller="User" method="post">
    
    <div class="mx-auto">
        <div class="mb-3">
            <label class="form-label">Имя аккаунта</label>
            <input type="text" asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="form-text">Введите имя аккаунта</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Эл. почта</label>
            <input type="email" asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
            <div class="form-text">Введите эл.почту</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input type="password" asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="form-text">Введите пароль</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <div class="form-text">Введите пароль</div>
        </div>
        
        <div class="mb-3">
            Нажимая на кнопку "Регистрация" вы соглашаетесь с <a class="text-dark" asp-controller="Home" asp-action="Policy">Условиями использования и Политикой конфиденциальности</a>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Регистрация</button>
        <a href="@Url.Action("Login")" class="btn btn-secondary btn-lg" >Вход </a>
    </div>
</form>

