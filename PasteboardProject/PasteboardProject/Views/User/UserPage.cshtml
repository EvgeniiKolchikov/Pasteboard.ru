@model PasteboardProject.Models.User;

@{
    Layout = "_Layout";
}

<h2 class="text-center">Страница пользователя: @Model.Name</h2>
<br/>

<h3 class="text-center">Список моих карточек:</h3>
<body class="text-center">
    @foreach (var pasteboard in Model.Pasteboards)
    {
        <button type="button" class="btn btn-lg bd-btn-lg btn-outline-secondary gap-2 col-4 mx-auto"
             onclick="location.href=@Url.Action("EditPasteboard", "Pasteboard", pasteboard.Id)">
            @pasteboard.Id @pasteboard.Name
        </button>
        <br/>
    }
</body>

